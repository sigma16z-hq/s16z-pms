{
  "name": "s16z-pms",
  "version": "0.0.1",
  "description": "S16Z Portfolio Management System - NestJS Migration",
  "author": "S16Z Team",
  "private": true,
  "license": "UNLICENSED",
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/pms-service/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "test:debug": "node --inspect-brk ./node_modules/vitest/vitest.mjs run --threads false",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "dev:setup": "cp .env.local.example .env.local && pnpm docker:up && sleep 5 && pnpm db:push && pnpm db:seed:dev",
    "dev:reset": "pnpm docker:down && pnpm docker:up && sleep 5 && pnpm db:push && pnpm db:seed:dev",
    "dev:clean": "pnpm docker:down && docker volume rm s16z-pms_postgres_data s16z-pms_redis_data || true",
    "db:generate": "prisma generate --schema=libs/database/prisma/schema.prisma",
    "db:push": "prisma db push --schema=libs/database/prisma/schema.prisma",
    "db:migrate": "prisma migrate dev --schema=libs/database/prisma/schema.prisma",
    "db:studio": "prisma studio --schema=libs/database/prisma/schema.prisma",
    "db:seed": "tsx libs/database/src/seed/run-seed.ts",
    "db:seed:dev": "NODE_ENV=development pnpm db:seed",
    "db:reset": "prisma migrate reset --schema=libs/database/prisma/schema.prisma --force && pnpm db:seed"
  },
  "dependencies": {
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schedule": "^6.0.0",
    "@prisma/client": "5.7.1",
    "cache-manager": "^7.2.0",
    "cron": "4.3.0",
    "ioredis": "^5.3.2",
    "nest-commander": "^3.12.5",
    "node-fetch": "^3.3.2",
    "openapi-fetch": "^0.10.5",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "socks-proxy-agent": "^8.0.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@testcontainers/postgresql": "10.13.2",
    "@types/node": "^20.3.1",
    "@typescript-eslint/eslint-plugin": "7.8.0",
    "@typescript-eslint/parser": "7.8.0",
    "@vitest/coverage-v8": "^1.6.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "prisma": "5.7.1",
    "testcontainers": "10.13.2",
    "ts-loader": "^9.4.3",
    "tsx": "^4.19.1",
    "typescript": "^5.1.3",
    "vite-tsconfig-paths": "^4.3.0",
    "vitest": "^1.6.0"
  }
}
