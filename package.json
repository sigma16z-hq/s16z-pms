{
  "name": "s16z-pms-nestjs",
  "version": "1.0.0",
  "description": "NestJS-based refactor of S16Z Portfolio Management System",
  "main": "index.js",
  "scripts": {
    "build": "pnpm -r build",
    "build:api": "nest build pms-api",
    "build:data-fetch": "nest build pms-data-fetch",
    "build:admin-api": "nest build pms-admin-api",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:api": "nest start pms-api",
    "start:api:dev": "nest start pms-api --watch",
    "start:data-fetch": "nest start pms-data-fetch",
    "start:data-fetch:dev": "nest start pms-data-fetch --watch",
    "start:admin-api": "nest start pms-admin-api",
    "start:admin-api:dev": "nest start pms-admin-api --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "format": "prettier --write \"**/*.ts\"",
    "format:check": "prettier --check \"**/*.ts\"",
    "db:generate": "pnpm --filter @s16z/database db:generate",
    "db:migrate": "pnpm --filter @s16z/database db:migrate",
    "db:push": "pnpm --filter @s16z/database db:push",
    "db:studio": "pnpm --filter @s16z/database db:studio"
  },
  "keywords": [
    "pms",
    "portfolio-management",
    "nestjs",
    "monorepo",
    "s16z"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/platform-fastify": "^11.1.6",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/terminus": "^11.0.0",
    "@prisma/client": "^5.0.0",
    "@types/lodash": "^4.17.20",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv": "^16.6.1",
    "ioredis": "^5.7.0",
    "lodash": "^4.17.21",
    "node-fetch": "^3.3.2",
    "prisma": "^5.0.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.7",
    "@nestjs/testing": "^11.1.6",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.0.0",
    "@types/node-fetch": "^2.6.13",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.6.2",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.3",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapping": {
      "^@s16z/common(|/.*)$": "<rootDir>/libs/common/src/$1",
      "^@s16z/database(|/.*)$": "<rootDir>/libs/database/src/$1",
      "^@s16z/external-apis(|/.*)$": "<rootDir>/libs/external-apis/src/$1",
      "^@s16z/business-logic(|/.*)$": "<rootDir>/libs/business-logic/src/$1",
      "^@s16z/api-types(|/.*)$": "<rootDir>/libs/api-types/src/$1"
    }
  }
}