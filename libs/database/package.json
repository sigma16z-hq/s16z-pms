{
  "name": "@s16z/database",
  "version": "1.0.0",
  "description": "Enhanced database layer with Prisma and NestJS for S16Z PMS",
  "type": "commonjs",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "build": "tsc -p tsconfig.lib.json",
    "db:generate": "prisma generate --schema=./schema.prisma",
    "db:push": "prisma db push --schema=./schema.prisma",
    "db:migrate": "prisma migrate dev --schema=./schema.prisma",
    "db:migrate:deploy": "prisma migrate deploy --schema=./schema.prisma",
    "db:reset": "prisma migrate reset --schema=./schema.prisma",
    "db:studio": "prisma studio --schema=./schema.prisma",
    "db:seed": "tsx src/seed.ts"
  },
  "peerDependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/config": "^4.0.0",
    "@prisma/client": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/wait-on": "^5.3.4",
    "prisma": "^5.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "wait-on": "^8.0.4"
  },
  "keywords": [
    "database",
    "prisma",
    "postgresql",
    "pms",
    "nestjs",
    "s16z"
  ],
  "author": "",
  "license": "ISC"
}