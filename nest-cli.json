{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/pms-api/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/pms-api/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/pms-api",
  "projects": {
    "pms-api": {
      "type": "application",
      "root": "apps/pms-api",
      "entryFile": "main",
      "sourceRoot": "apps/pms-api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/pms-api/tsconfig.app.json"
      }
    },
    "database": {
      "type": "library",
      "root": "libs/database",
      "entryFile": "index",
      "sourceRoot": "libs/database/src",
      "compilerOptions": {
        "tsConfigPath": "libs/database/tsconfig.lib.json"
      }
    },
    "external-apis": {
      "type": "library",
      "root": "libs/external-apis",
      "entryFile": "index",
      "sourceRoot": "libs/external-apis/src",
      "compilerOptions": {
        "tsConfigPath": "libs/external-apis/tsconfig.lib.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    }
  }
}